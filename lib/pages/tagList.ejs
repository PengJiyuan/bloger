<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/static/images/common/favicon.ico" type="image/x-icon" />
    <link href="/static/css/taglist.css" rel="stylesheet" />
    <link href="/static/iconfonts/icons/icons.css" rel="stylesheet" />
    <title>归档</title>
  </head>
  <body>
    <%- htmlMenu %>
    <div class="site-wrapper">
      <header id="header" class="header red_sunset">
        <div class="center">
          <h1 class="title"><i class="icon icon-list"></i>归档</h1>
        </div>
      </header>
      <div class="tag-wrapper">
        <ul class="tags">
          <% tags.forEach(function(tag){ %>
            <li><i class="icon icon-tag"></i><a href="/tag/<%= tag.name %>"><%= tag.name %></a> <span><%= tag.count %></span></li>
          <% }); %>
        </ul>
      </div>
      <footer class="copyright">
        <span><b><a href="/"><%= name %></a></b> All rights reserved. Powerd by <a style="color: #f59200" href="https://github.com/PengJiyuan/bloger" target="_blank">Bloger</a>.</span>
      </footer>
    </div>
    <script src="https://unpkg.com/particle-bg/lib/particle-bg.umd.min.js"></script>
    <script>
      particleBg('#header', {
        count: 30,
        color: '#fff'
      });
    </script>
  </body>
</html>
